<header class="header clearfix">
  <div class="header-content grid-95 middle clearfix">
    <div class="logo">
      <%= link_to (image_tag "v2/logo.png"), '/' %>
    </div>
    <div class="search">
      <%= form_tag("/search") do %>
        <%= text_field_tag :search,"", :class => 'search_input'  %>
        <%= image_submit_tag('v2/bt_search.png', :class => "submit") %>
      <% end %>
    </div>

    <ul class="user_nav">
      <li class="user_center">

        <%= link_to image_tag('v2/user_test.png'), { :controller => "items", :action => "edit", :id => @item }, :class => "avatar"   %>

        <%= link_to_icon "arrow_down", {:controller => "items", :action => "edit", :id => @item } %>

      </li>
      <li class="user_add">
        <%= link_to_icon "add_green", :controller => "items", :action => "edit", :id => @item %>

      </li>
    </ul>

    <!-- header-content end -->
  </div>

</header>
