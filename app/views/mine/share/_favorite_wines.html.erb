<% unless @cellar_items.nil? %>
<% @cellar_items.each_with_index do |item, index| %>
<% if index < 2 %>
<div class="large_list">
	<%= link_to wine_cover_tag(item.wine_detail, :thumb_name => :w_thumb, :align => "left", :width => 203, :height => 203), wine_path(item.wine_detail) %>
</div>
<% else %>
<div class="small_list">
	<%= link_to wine_cover_tag(item.wine_detail, :thumb_name => :w_thumb, :align => "left", :width => 100, :height => 100), wine_path(item.wine_detail) %>	
</div>
<% end %>
<% end %>
<% end %>

