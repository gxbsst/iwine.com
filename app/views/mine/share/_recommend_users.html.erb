<% @recommend_users.each do |recommend_user| %>
  <div class="item">
    <div class="pic">
      <%= link_to (image_tag recommend_user.avatar, :width=>50, :height=>50 , :align => "left" ), :controller => "items", :action => "edit" %>
    </div>
    <h4> <%= recommend_user.username %> </h4>
    <p><%= link_to_button "follow", "/friends/follow?user_id="+recommend_user.id.to_s %> </p>
  </div>
<% end %>