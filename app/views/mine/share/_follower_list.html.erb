<div class="middle">
  <%= link_to (image_tag items[0].follower.avatar,:width => 100, :height => 100 ), :controller => "items", :action => "edit" %>
  <% if items.length > 1 %>
    <% (1..( items.length - 1 ) ).each do |i| %>
      <%= link_to (image_tag items[i].user.avatar, :align => "left", :width => 50, :height => 50 ), :controller => "items", :action => "edit"  %>
    <% end %>
  <% end %>
</div>