<div class="winery_main">
	<div class="content">
		<div class="wine_add_step2 mb30">第二步：选择你想收藏的酒</div>
		<div class="add_wine_search mb20">
			<input type="text" class="text wine_search float_l mr5" placeholder="请输入酒的中文或英文名称" />
			<a href="cellar_add_step2.html" class="button_gray" onclick="this.blur();" title="搜索藏酒"><span>搜索藏酒</span></a></div>
			
			<%= form_for @search, :url => '/mine/cellars/new/', :method => 'get' do |f| -%>
			  
			
			<table class="winery_list mb30" width="100%" border="0" cellspacing="0" cellpadding="0">
				<tr>
					<th class="select_wine">&nbsp;</th>
					<th>酒标</th>
					<th>名称&amp;描述</th>
				</tr>
				<% for detail in @search.wines %>
				<tr>
					<td class="select_wine">
						
						<input class="radio" type="radio" name="wine_detail_id"  value="<%= detail.id %>" />
					</td>
					<td>
						<div class="wine_img">
							<%= wine_cover_tag( detail, :thumb_name => "w_thumb", :width => "50", :height => "63" )%>
						</div>
					</td>
					<td><%= detail.cname %><br />
						<%= detail.ename %><br />
						法国-波尔多-波亚克<br />
						拉菲古堡<br />
						<img src="/images/wine_red.gif" width="18" height="7" alt="红葡萄酒" /> 红葡萄酒
					</td>
				</tr>
				<% end %>
						
				</table>
				
					<div class="clearfix"><a href="#" class="button_gray_b float_r next" id="next" title="去填写相关信息"><span>去填写相关信息</span></a></div> 
						<script type="text/javascript" charset="utf-8">
							$('a#next').click(function(){
							    $("form.edit_search").submit();
							    return false;
							});
						</script>
					 
				</div>
				<% end -%>
				
				<div class="clear"></div>
			</div>
