<script language="javascript" type="text/javascript">
</script>

<% content_for :title, @title%>
<% content_for :js do %>
  <%#= javascript_include_tag "events" %>
<% end %>
<% content_for :css do %>
	<%= stylesheet_link_tag "event" %>
<% end %>
   <div class="whitespace eventmain">
   	  <div class="left">
        <div class="base">
          <div class="poster">
            <%= image_tag @event.poster_url(:large), :size => '150x225' %>
          </div>
          <div class="base_content">
            <span class="type">
              <%= event_item_tags(@event) %>
            </span>
            <h1><%= @event.title %></h1>
            <div class="info">
              时间: <%= @event.begin_end_at %>
              <br />
              地点: <%= @event.full_address %>
              <br />
              组织者：<%= link_to  @event.user.username, user_path(@event.user, :trailing_slash => true) %>
            </div>
            <span class="p_count">
              <%= @event.participants_count %>人参加  |  <%= @event.followers_count %>人感兴趣
            </span>
            <div class="action">
              <div class="share">
                <%= render 'share/sns_icons',
                  :image_url => sns_image_url(@event, :thumb_name => :large),
                  :title => sns_title(@event.title),
                  :summary => @event.title ,
                  :url => request.url %>
              </div>
              <%= render 'join_event_button' %>

              <div id="follow_form"  style="display: none" ></div>

              <% if @follow_item.present? %>
                <span class="icon_fol mr5">感兴趣中</span>
                <span class="cancl_fol mr5"> 
                  <%= link_to "(取消)", event_follow_path(@event, @follow_item), :method => :delete %>
                </span>
              <% else %>
                <%= link_to  new_event_follow_path(@event), 
                  :class => [:btn_bluesky_ss, :ajax], 
                  :remote => true do %>
                    <span>我感兴趣</span>
                  <% end %>
                <% end %>
                <!--end action-->
            </div>
            <!--end base_content-->
          </div>
          <div class="clear"></div>
          <!--end base-->
        </div>

        <div class="section">
          <div class="title">
            <%= link_to event_path(@event), :class => [:btn_gray, :float_r] do %>
              <span>返回</span>
            <% end %>
            <h2>活动参与者</h2>
          </div>
          <div class="sort">
            <span class="current">参加(<%= @event.participants_count %>)</span>
            <span>
              <%= link_to "感兴趣(#{@event.followers_count})", followers_event_path(@event) %>
            </span>
            <div class="clear"></div>
          </div>

          <div class="content">
            <ul class="userlist">
              <% @participants.each do |p| %>
                <li>
                  <div class="userpic">
                    <%= link_to_user p.user, user_path(p.user, :trailing_slash => true),
                      {:with_avatar => true, :avatar_version => :thumb},
                      {:size => '50x50', :alt => p.user.username } %>
                  </div>
                <div class="userinfo">
                  <div class="username">
                    <%= link_to p.user.username, p.user %>
                  </div>
                  <div class="userlocation"><%= p.user.city %></div>
                </div>
                </li>
                <% end %>
            </ul>
          </div>

          <!--end section-->
        </div>


        <!--end left-->
      </div>
      <div class="right">
        <div class="sidebox">
          <%= link_to new_event_path, :class => :btn_createvent do %>
            <span>我要创建活动</span>
          <% end %>
        </div>
        <div class="sidebox">
          <div class="title">
            <h3>推荐的活动</h3></div>
          <div class="side_event">
            <% @recommend_events.each do |event| %>
              <dl class="clearfix">
                <dt>
                  <%= link_to event_path(event) do %>
                    <%= image_tag event.poster_url(:x_thumb), :size => '70x105', :alt => event.title %>
                  <% end %>
                </dt>
                <dd>
                  <h3> <%= link_to event.title, event_path(event)  %></h3>
                  <div class="info">
                    <%= event.begin_end_at %>
                    <br />
                    <%= event.full_address %>
                    <br />
                  </div>
                  <div class="p_count2">
                    <%= event.participants_count %>人参加  |  <%= event.followers_count %>人感兴趣
                  </div>
                </dd>
                <div class="clear"></div>
              </dl>
            <% end %>
            <!--end side_event-->
          </div>
          <!--end sidebox-->
        </div>
        <!--end right-->
            </div>
            <div class="clear"></div>
        </div>



