<% content_for :title, @title %>
<% content_for :css do  %>
    <%= stylesheet_link_tag "winery" %>
<% end %>

  <div class="whitespace mb30">
    <%= render "winery_detail" %>
  </div>

  <div class="whitespace winerymain">
    <div class="left">
      <div class="section">
        <div class="title">
          <h2>照片<span class="font12 more"><%= link_to "(共#{@winery.photos_count}张...)", winery_photos_path(@winery) %></span></h2>
        </div>

        <div class="content">
          <%= render :partial => "thumb_photo" %>
          <div class="clear"></div>
        </div>

      </div>
      <%= render :partial => "info_item", :collection => @winery.info_items %>
      <div class="section">
        <div class="title"><h2>所有酒款<span class="font12 more"><%= link_to "(共#{@winery.wines_count}款...)", wines_list_winery_path(@winery)  %></span></h2></div>
        <div class="content">
          <ul class="wine_list">
            <%= render :partial => "wine", :collection => @wines %>
          </ul>
        </div>

      </div>


      <div class="seciont last">
         <div class="title">
           <%= link_to new_winery_comment_path(@winery, :do => "comment"), :class => "btn_gray float_r font12", :remote => true do %>
                <span>添加评论</span>
           <% end %>
           <h2>评论<span class="font12 more"><%= link_to "(共#{@winery.comments_count}条...)", winery_comments_path(@winery) %></span></h2>
         </div>

        <div class="wp_space_line ptb30">
          <%= render "comments/comments"  %>
        </div>
      </div>
    </div>

    <div class="right">
      <%= render "hot_winery" %>

       <%= render "wineries/follower" %>
     </div>

    <div class="clear"></div>
  </div>
