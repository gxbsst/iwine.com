<div id="register">
  <div class="logreg_box">
    <div class="top">注册 iWine.com</div>
    <div class="mid">
      <div class="left">
        <%= form_for(@user, :url => registration_path(resource_name) ) do |f| %>
          <p>邮件地址<span class="red">*</span></p>
          <div class="un">
            <%= f.email_field :email, :class => "text", :placeholder => "Email"%>
          </div>
          <p>密码<span class="red">*</span></p>
          <div class="pw">
             <%= f.password_field :password, :class => "text", :placeholder => "密码"%>
          </div>
          <p>昵称<span class="red">*</span></p>
          <div class="pw">
            <%= f.text_field :username, :class => "text", :placeholder => "昵称"  %>
          </div>
          <p class="agree">
             <%= f.check_box :agree_term, :checked => "checked", :class => "checkbox" %>
             我已阅读并同意 <%= link_to "《使用条款》", "/private" %>，同时确认已达当地法定饮酒年龄。
          </p>
          <div class="submit">
            <%= link_to  "javascript:void(0)", :onclick => "$(this).parents('form').submit()" do %>
              <%= theme_image_tag "common/register_submit.jpg", 
                :width => 138, 
                :height => 51, 
                :alt => "提交" %>
            <% end %>  
          </div>
        <% end %>
      </div>
      <div class="right">
        <%= render "devise/sessions/sns" %>
      </div>
      <div class="clear"></div>
    </div>
    <div class="bot"></div>
  </div>
  <div class="clear"></div>
</div>
