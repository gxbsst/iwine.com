<% content_for :title, @title%>
<% content_for :css do  %>
    <%= theme_stylesheet_link_tag "winery" %>
<% end %>
<div id="wrapper950">
   <div class="whitespace mb30">
      <%= render "wineries/winery_detail" %>
   </div>
  
   <div class="whitespace winerymain">
     <div class="left">
       <div class="section">
         <div class="title">
           <%= link_to winery_path(@winery), :class => "btn_gray float_r" do %>
             <span>返回</span>
           <% end %>
           <h2>所有评论<span class="font12 more">(共<%= @winery.comments_count %>条...)</span></h2>
         </div>
         
         <div class="content">
          <%= render "comment_list" %>
          <div class="clear"></div>
          <div class="pagination">
            <%= paginate @comments %>
          </div>
         </div>
       </div>
     </div>
     
     <div class="right">
       <%= render "wineries/hot_winery" %>
       <%= render "wineries/follower" %>
     </div>
     <div class="clear"></div>
   </div>
</div>