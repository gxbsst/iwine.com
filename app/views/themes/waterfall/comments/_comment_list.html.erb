	<% if params[:controller] == "wine_details" &&  params[:action] == "show" %>
	<div class="title_btn">
		<a href="#" class="btn_gray float_r"><span>添加评论</span></a>
		<% unless params[:controller] == "wine_details/comments" %>
		<h2>
		  评论
		  <span class="font12 more">
		    <%= link_to "(#{@wine_detail.comments_count}条...)", wine_comments_path(@wine_detail.id)%>
		  </span>
		</h2>
		<% end %>
		<div class="clear"></div>
	</div>
	<% end %>
	
	<% if @comments.size > 0 # 因为有comment.build, 所以不管怎么样@comments 都有一条记录 %>
	<ul class="comment_list clearfix">
		<% @comments.each do |comment| %>	
		<li>
			<div class="userpic">
				 <%= link_to_user comment.user, user_path(comment.user, :trailing_slash => true), {:with_avatar => true, :avatar_version => :middle}, {:width => 50, :height => 50} %>
			</div>
			<div class="main">
				<div class="username">
					<%= link_to_user comment.user, user_path(comment.user, :trailing_slash => true ) %>
					<span class="date"> <%= comment.created_at.to_s(:normal) %></span><!--<span class="control"><a href="#">回复</a> | <a href="#">删除</a></span>-->
					<%=  star_rate_tag(comment.point.to_i) %>
				</div>
				<div class="content"><%= comment.body %></div>
				<div class="userful">
					<%= link_to  vote_comment_path(comment.id), :remote => true, :class => "ajax vote"  do %>
		        有用(<span class="likes_count"><%=comment.votes_count %></span>)
		      <% end %>
					| 
					<%=  reply_comment(comment) %>
				</div>		
				<div id="reply_comment_<%= comment.id %>" class="replybox" style="display: none"></div>			
			</div>
			<div class="clear"></div>
		</li>
		<% end %>
		</ul>
		<% else %>
		<p>暂时没有评论...</p>
		<% end %>
		<div class="clear"></div>
		
		<div class="comment_post_star mt30">
			<% if user_signed_in? %>
			<%= form_for [@commentable, @comment], :validate => true do |f| -%>
			<%= f.hidden_field :do %>
			<%= hidden_field_tag "return_url", request.fullpath %>
			<a name="01" id="01"></a>

			<div class="evaluate">
				<% #图片不需要评星 %>
				<%  unless @comment.commentable_type == "Photo"   %>
				想给个评价么？
				<div class="star_rate" id="wine_profile_star_bar">
					<ul id="stars">
					</ul>
					<input type="hidden" name="rate_value" value=<%= @comment.point || 0 %> />
				</div>
				<div class="clear"></div>
				<!-- <span class="text_value"></span> -->

				<script type="text/template" id="star_item">
 				 <%= image_tag 'base/star_gray.gif', :width => 15, :height => 14 %>
		   		</script>

		   		<script type="text/javascript">
		   		 $(document).ready(function(){

		   		 });
		   		</script>
				<% end %>
				<div class="clear"></div>
				<a href="javascript:void(0)" class="btn_gray submit"><span>加上去</span></a>
			</div>

		  	<%  unless @comment.commentable_type == "Photo"   %>
		  		<%= theme_javascript_include_tag :star_rate %>
		  	<% end %>
		  	
			<div class="userpic">
				 <%= link_to_user @user, user_path(@user, :trailing_slash => true), {:with_avatar => true, :avatar_version => :middle}, {:width => 50, :height => 50} %>     
			</div>
			<div class="post_main">
				<div class="post">
					<%= f.text_area :body,  :class => [:mb10, :comment_body] %>
				</div>
			</div>
			<div class="clear"></div>
			<% end %>

			<% else %>
			<p><%= link_to "登陆发表评论", login_path() %></p>
			<% end %>
		</div>


<script type="text/javascript">
  $(document).ready(function(){


  // "有用" 成功时，更新有用的数量
  $("a.vote").bind("ajax:success", function(event, data, textStatus, jqXHR){
    $(this).find("span.likes_count").text(data);
  });
  // 回复按钮
  $("a.reply_comment_button").click(function(){
  // $(".reply_comment_outer").html("");
  });
  $("a.reply_comment_button").bind("ajax:success", function(event, data, textStatus, jqXHR){
  $comment_outer = $(this).parent().parent().children(".replybox");

  if($comment_outer.is(":hidden")){

  	$comment_outer.slideDown("slow");
  }
  else
  {
  	$comment_outer.slideUp("slow");
  }
  });

<% #图片不需要评星 %>
<%  unless @comment.commentable_type == "Photo"   %>
  window.StarApp = new StarsView({el:$("#wine_profile_star_bar")});
		  		StarApp.itemView = new StarItemView();
		  		StarApp.setDefaultRateStar();
<% end %>

  });
</script>
