<% content_for :title, @title%>
<% content_for :js do %>
  <%#= theme_javascript_include_tag "events" %>
<% end %>
<% content_for :css do %>
	<%= theme_stylesheet_link_tag "event" %>
<% end %>
<div class="kv_2col">
  <% @top_events.each do |event| %>
    <div class="col <%= cycle("mr20", "odd") -%>  ">
      <dl class="clearfix">
        <dt>
          <%= link_to event_path(event) do %>
            <%= image_tag event.poster_url(:large), :size => '130x195' %>
          <% end %>
        </dt>
        <dd>
          <span class="type">
            <%= event.tag_list.join(',') %>
          </span>
          <h1>
            <%= link_to event.title, event_path(event)  %>
          </h1>
          <div class="info">
            时间：<%= event.begin_end_at %>
            <br />
            地点：<%= event.full_address  %>
            <br />
            组织者: 
            <%= link_to  event.user.username, 
            user_path(event.user, :trailing_slash => true) %>
          </div>
          <span class="p_count">
            <%= event.participants_count %>人参加  |  
            <%= event.followers_count %>人感兴趣
          </span>
        </dd>
      </dl>
    </div>
  <% end %>
  <div class="clear"></div>
  </div>
      <div class="whitespace eventmain">
   	  <div class="left">
      	<div class="event_tag clearfix">
