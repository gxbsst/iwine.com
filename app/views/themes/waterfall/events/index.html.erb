                  <%= image_tag event.poster_url(:thumb), :size => '100x150', :alt => event.title %>
                <% end %>
              </dt>
              <dd>
                <span class="type">
                  <%= event_item_tags(event) %>
                </span>
                <h2> <%= link_to event.title, event_path(event)  %></h2>
                <div class="info">时间:  <%= event.begin_end_at %><br />
                  地点:  <%= event.full_address %><br />
