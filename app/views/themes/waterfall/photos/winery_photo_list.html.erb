<% content_for :css do  %>
    <%= theme_stylesheet_link_tag "winery" %>
<% end %>

<div id="wrapper950">
    <div class="whitespace mb30">
         <%= render "themes/waterfall/wineries/winery_detail" %>
    </div>

    <div class="whitespace winerymain">
         <div class="left">
              <div class="section">
                  <div class="title">
                      <%= link_to winery_path(@winery), :class => "btn_gray float_r" do%>
                         <span>返回</span> 
                      <% end %>
                      <%= link_to upload_mine_albums_path, :class => "btn_gray float_r mr5" do %>
                          <span>上传照片</span>
                      <% end %>
                      <h2>所有照片<span class="font12 more">(共<%= @winery.photos_count %>张)</span></h2>
                  </div>
                  <div class="content">
                      <ul class="winery_pic_list">
                          <%= render :partial => "themes/waterfall/photos/photos_list" %>
                      </ul>
                      <div class="clear"></div>
                  </div>
              </div>
           
              <div class="pagination"><%= paginate @photos%></div>
         </div>

         <div class="right">
           <div class="sidebox">
             <div class="title"><h3><a name="05" id="05"></a>热门酒款</h3></div>
             <div class="main">
               <ul class="sidewine">
                 <%= render :partial => "themes/waterfall/wineries/hot_wine", :collection => @hot_wines, :as => :wine_detail %>
                 <div class="clear"></div>
               </ul>
             </div>
           </div>
         </div>
         <div class="clear"></div>
    </div>
</div>