<% content_for :css do %>
  <%= theme_stylesheet_link_tag "event" %>
<% end %>
<% content_for :title, @title%>
<div class="whitespace">
  <div id="hp">
    <%= render "users/sub_nav", :action => params[:action] %>
    <div class="clear"></div>
    <div class="content">
      <div class="left">
          <ul class="event_menu">
          <style type="text/css" media="screen">
            ul.event_menu {
              height: 40px;
            }
             ul.event_menu li {
              font-size: 14px;
              line-height: 160%;
              display: inline;
              margin: 10px 10px 0 0;
            }
          </style>
            <li><%= link_to "创建的活动", create_events_user_path(@user) %></li>
            <li><%= link_to "参加的活动", join_events_user_path(@user) %></li>
            <li><%= link_to "感兴趣的活动", follow_events_user_path(@user) %></li>
          </ul>
        <div class="title_btn">
          <h1>
            创建的活动 
            <span class="font12 more">
              <%= link_to "(共#{ @user.create_events_count }个...)", create_events_user_path(@user) %>
            </span>
          </h1>
        </div>
        <div class="event_list">
          <% if @create_events.present? %>
            <% @create_events.each do |event| %>
              <dl class="clearfix">
                <dt>
                  <%= link_to event_path(event) do %>
                    <%= image_tag event.poster_url(:thumb), :size => '100x150', :alt => event.title %>
                  <% end %>
                </dt>
                <dd>
                  <span class="type">
                    <%= event_item_tags(event) %>
                  </span>
                  <h2> <%= link_to event.title, event_path(event)  %></h2>
                  <div class="info">时间:  <%= event.begin_end_at %><br />
                    地点:  <%= event.full_address %><br />
                    组织者：<%= link_to  event.user.username, 
                      user_path(event.user, :trailing_slash => true) %>
                    </div>
                    <div class="p_count2">
                      <span>
                        <%= event.participants_count %>人参加  |
                        <%= event.followers_count %>人感兴趣
                      </span>
                    </div>
                  </dd>
                </dl>
              <% end %>
            <% else %> 
              <p>暂无创建的活动.</p>
            <% end %>
            <!--end event_list-->
          </div>


        <div class="title_btn">
          <h1>
            参加的活动
            <span class="font12 more">
              <%= link_to "(共#{ @user.join_events_count }个...)", join_events_user_path(@user) %>
            </span>
          </h1>
        </div>
        <div class="event_list">
          <% if @join_events.present? %>
            <% @join_events.each do |event| %>
              <dl class="clearfix">
                <dt>
                  <%= link_to event_path(event) do %>
                    <%= image_tag event.poster_url(:thumb), :size => '100x150', :alt => event.title %>
                  <% end %>
                </dt>
                <dd>
                  <span class="type">
                    <%= event_item_tags(event) %>
                  </span>
                  <h2> <%= link_to event.title, event_path(event)  %></h2>
                  <div class="info">时间:  <%= event.begin_end_at %><br />
                    地点:  <%= event.full_address %><br />
                    组织者：<%= link_to  event.user.username, 
                      user_path(event.user, :trailing_slash => true) %>
                    </div>
                    <div class="p_count2">
                      <span>
                        <%= event.participants_count %>人参加  |
                        <%= event.followers_count %>人感兴趣
                      </span>
                    </div>
                  </dd>
                </dl>
              <% end %>
            <% else %> 
              <p>暂无参加的活动.</p>
            <% end %>
            <!--end event_list-->
          </div>

          <div class="title_btn">
            <h1>
              关注的活动
              <span class="font12 more">
                <%= link_to "(共#{ @user.follow_events_count }个...)", follow_events_user_path(@user) %>
              </span>
            </h1>
          </div>
          <div class="event_list">
            <% if @follow_events.present? %>
              <% @follow_events.each do |event| %>
                <dl class="clearfix">
                  <dt>
                    <%= link_to event_path(event) do %>
                      <%= image_tag event.poster_url(:thumb), :size => '100x150', :alt => event.title %>
                    <% end %>
                  </dt>
                  <dd>
                    <span class="type">
                      <%= event_item_tags(event) %>
                    </span>
                    <h2> <%= link_to event.title, event_path(event)  %></h2>
                    <div class="info">时间:  <%= event.begin_end_at %><br />
                      地点:  <%= event.full_address %><br />
                      组织者：<%= link_to  event.user.username, 
                        user_path(event.user, :trailing_slash => true) %>
                      </div>
                      <div class="p_count2">
                        <span>
                          <%= event.participants_count %>人参加  |
                          <%= event.followers_count %>人感兴趣
                        </span>
                      </div>
                    </dd>
                  </dl>
                <% end %>
              <% else %> 
                <p>暂无参加的活动.</p>
              <% end %>
              <!--end event_list-->
            </div>

          <!--end left-->
      </div>
      <div class="right">
        <div class="sidebox">
          <%= link_to new_event_path, :class => :btn_createvent do %>
            <span>我要创建活动</span>
          <% end %>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>
