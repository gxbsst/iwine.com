<% if @following_wines.present? %>
  <% @following_wines.collect{|i| i.followable }.each_with_index do |wine_detail, index| %>
    <dl <%= "class='last'" if index.odd? %>>
      <dt>
        <%= link_to wine_path(wine_detail) do %>
          <%= wine_label_tag(wine_detail,
              :thumb_name => :thumb_x,
              :width => 100,
              :height => 100) %>
        <% end %>
      </dt>
      <dd>
        <h1 class="zh"><%= link_to wine_detail.cname, wine_path(wine_detail) %></h1>
        <h1 class="en"><%= link_to wine_detail.origin_name, wine_path(wine_detail) %></h1>
      </dd>
    </dl>
  <% end %>
  <div class="clear"></div>
<% else %>
  <p>暂时没有关注的酒！</p>
<% end %>
