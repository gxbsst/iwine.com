<% if !@followers.blank? %>
<% @followers.map_user.each_with_index do |user, index|%>
<span>
  <% if index > 0 %>
  <%= link_to_user user, user_path(user.id, :trailing_slash => true), 
  {:with_avatar => true, :avata_version => :thumb}, 
  {:width => 50, :height => 50, :alt => user.username} %>
  <% else %>
  <%= link_to_user user, user_path(user.id, :trailing_slash => true), 
  {:with_avatar => true, :avata_version => :thumb}, 
  {:width => 101, :height => 101, :alt => user.username} %>
  <% end %>
</span>
<% end %>	
<div class="clear"></div>
<% else %>
<p>你还没还有粉丝！</p>
<% end %>
