<% if !@comments.blank? %>
<ul class="wine_list">
  <% @comments.each do |comment| %>
  <li class="clearfix">
    <%= link_to wine_path(comment.commentable) do %>
     <%= wine_cover_tag comment.commentable, :thumb_name => :thumb, :width => 100, :height => 100 %>
    <% end %>
    <div class="info">
      <h3 class="zh">
        <%= link_to comment.commentable.cname, wine_path(comment.commentable.id) %>
      </h3>
      <h3 class="en">
        <%= link_to comment.commentable.ename, wine_path(comment.commentable.id) %>
      </h3>      
    </div>
    <div class="clear"></div>
  </li>
  <% end %>
</ul>
<% else %>
<p>暂时没有评论.</p>
<% end %>
