<% if !@follows.blank? %>
<ul class="wine_list">
  <% @follows.each do |follow| %>
  <li class="clearfix">
    <%= link_to wine_path(follow.followable) do %>
     <%= wine_label_tag follow.followable, :thumb_name => :thumb, :width => 100, :height => 100 %>
    <% end %>
    <div class="info">
      <h3 class="zh">
        <%= link_to follow.followable.cname, wine_path(follow.followable.id) %>
      </h3>
      <h3 class="en">
        <%= link_to follow.followable.origin_name, wine_path(follow.followable.id) %>
      </h3>      
    </div>
    <div class="clear"></div>
  </li>
  <% end %>
</ul>
<% else %>
<p>暂时没有关注的酒.</p>
<% end %>
