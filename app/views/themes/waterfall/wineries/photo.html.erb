  <div class="whitespace mb30">
    <%= render "winery_detail" %>
  </div>

  <div class="whitespace winerymain">
    <div class="left">
      <div class="section">
        <div class="title">
          <%= link_to photos_list_winery_path(@winery), :class => "btn_gray float_r" do %>
            <span>返回</span>
          <% end %>
          <%= link_to upload_mine_albums_path, :class => "btn_gray float_r mr5" do %>
            <span>上传照片</span>
          <% end %>
          <h2>所有照片</h2>
        </div>

        <div class="content">
          <div class="album_left">
            <div class="mb20">
              <div class="pre_next">
                <% if previous_photo = previous_page(@winery.photo_ids, @photo.id) %>
                    <%= link_to photo_winery_path(@winery, :photo_id => previous_photo) do %>
                        <span>前一张</span>
                    <% end %>
                <% end %>
                <% if next_photo = next_page(@winery.photo_ids, @photo.id) %>
                    <%= link_to photo_winery_path(@winery, :photo_id => next_photo) do %>
                        <span>后一张</span>
                    <% end %>
                <% end %>  
              </div>
            </div>
            
            <div class="photo">
              <%= image_tag @photo.image_url(:large), :alt => @photo.intro %>
            </div>

            <div class="info">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="right">

    </div>

    <div class="clear"></div>

  </div>
