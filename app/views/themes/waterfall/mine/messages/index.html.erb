<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <th>Sender</th>
    <th>Subject</th>
    <th>Messages</th>
  </tr>
  <% @messages.each do |m| %>
    <tr>
      <td><%= link_to m.last_sender, mine_message_path(m) %></td>
      <td><%= link_to m.subject, mine_message_path(m)  %></td>
      <td><%= link_to truncate(m.last_message.body), mine_message_path(m) %></td>
    </tr>
  <% end %>
</table>

<div id="mainspace860">
	<div id="message">
		<div class="title clearfix">
			<div class="message_search"><a class="btn_gray mr5" href="#"><span>发送私信</span></a><div class="search_space"><input name="" type="text" placeholder="查找联系人或私信内容"/><a href="#" class="search_btn"></a></div></div>
			<h1>我的私信</h1>
		</div>
		<div class="message_list">
			<ul class="private_list">
				<% @messages.each do |m| %>
				<li class="clearfix">
					<div class="userimg"><a href="#"><img src="image/userimage/001.jpg" width="48" height="48" /></a></div>
					<div class="content clearfix">
						<p> <%= link_to m.last_sender.username, mine_message_path(m) %> <%= link_to truncate(m.last_message.body), mine_message_path(m) %></p>
						<p class="info">
							<span>
							<%= link_to m.count_messages, mine_message_path(m) %>
							<i class="W_vline">|</i>
							<a href="#"> 回复</a>
							</span>
							<i class="date">12分钟前</i>
						</p>
					</div>
				</li>
				<% end %>
			  
			</ul>
		</div>
	</div>
</div>