<div class="whitespace">
  <div id="hp">
    <%= render "mine/sub_nav" %>
    <div class="clear"></div>

    <div class="content">
      <div class="album_left">
        <div class="title_btn">
          <h1>
            <%= @album.name %> 
            <span class="font12">(共<%= @album.photos_count %>张)</span>
          </h1>
        </div>
        <div class="mb20">
          <div class="btn_action">
            <%= link_to mine_album_path(@album.id), :class => [:btn_gray] do  %>
             <span>返回该相册</span>
            <% end %>
          </div>
          <div class="pre_next">
            <% if previous_photo = previous_page(@album.image_ids, @photo.id) %>
                <%= link_to photo_mine_album_path(@album, :photo_id => previous_photo) do %>
                    <span>前一张</span>
                <% end %>
            <% end %>
            <% if next_photo = next_page(@album.image_ids, @photo.id) %>
                <%= link_to photo_mine_album_path(@album, :photo_id => next_photo) do %>
                    <span>后一张</span>
                <% end %>
            <% end %>              
          </div>
        </div>
        <div class="photo">
          <%= image_tag @photo.image_url(:large) %>
          <p class="name"><%= @photo.intro %></p>
        </div>
        <div class="info">
          <%= render "photos/liked"%>
          <%= render "share/sns_icons"%>
          	<div><%= @photo.views_count %>浏览 | <%= @comments.count %>评论</div>
        </div>
        <div class="comment">
          <div class="mb20 clearfix">
            <div class="title">
              <a href="#01" class="btn_gray float_r" onclick="javascript:$('#photo_comment_body').focus()"><span>添加评论</span></a>
              <h3>评论</h3>
            </div>
          </div>
          <%= render "comments/comment_list" %>
          <a name="01" id="01"></a>
          </div>
        </div>
        <div class="album_right pt60 pl30">
          <h2>我的其他相册</h2>
          
          <ul class="side_album_list">
            <% @other_albums.each do |album| %>
            <li> 
              <%= link_to mine_album_path(album.id) do %>
                <% if album.cover.present? %>
                  <%= image_tag album.cover.image_url :thumb %>
                <% else %>
                  <img src="/assets/base/test/album_cover1.jpg" alt="木有图片" width="190" height="190" />
                <% end %>              
              <% end %>
              <h3><%= link_to album.name, mine_album_path(album.id) %></h3>
              <p class="info"><%= album.updated_at.to_s(:normal)%></p>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="clear"></div>
      </div>

    </div>
  </div>