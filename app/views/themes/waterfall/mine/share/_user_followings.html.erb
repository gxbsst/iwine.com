<ul class="userlist">
  <% @followings.map_user.each do |user| %>
<li>
  <div class="userpic">
    <%= link_to_user user, 
		user_path(user.id,:trailing_slash => true), 
		{:with_avatar => true, :avatar_version => :large}, 
		{:width => 50, :height => 50} %>
  </div>
  <div class="userinfo">
    <div class="username">
      <%= link_to_user user, user_path(user.id,:trailing_slash => true) %> 
    </div>
    <div class="userlocation">上海</div>
    <p><span class="cancl_fol"> <%= link_to "取消关注", "/mine/unfollow?user_id="+user.id.to_s  %> </span></p>
     <% if user.is_following current_user.id %>
        <p> 互相关注 </p>
    <% end %>
  </div>
</li>
<% end %>
</ul>
