<% @recommend_users.each do |user| %>
  <div class="item">
    <div class="pic">
	  <%= link_to_user user, 
		user_path(user.id, :trailing_slash => true), 
		:with_avatar => true, 
		:avatar_version => :thumb, 
		:align => "left", 
		:class => "w_50" %>
    </div>
    <h4> <%= user.username %> </h4>
    <p><%= link_to_button "follow", "/friends/follow?user_id="+user.id.to_s %> </p>
  </div>
<% end %>