<div id="comment_form">
  <h3 class="title">发送私信</h3>
  <%= form_for Message.new, :url => messages_path(), :validate => true, :class => "new_message" do |f| %>
      <div class="creat_new">
        <table border="0" cellspacing="10" cellpadding="5" width="90%" align="center">
          <tr>
            <td valign="top" class="label">
              <span class="red">*</span>发送给:
            </td>
            <td valign="top" class="text_input">
              <% value = defined?(receiver) ? receiver : nil %>
              <%= f.text_field :recipients, data: {autocomplete_source: '/api/users/names'}, :class => "text", :value => value, :size => "30" %>
              <i>请输入用户昵称</i>
            </td>
          </tr>
          <tr>
            <td valign="top" class="label">
              <span class="red">*</span>内容:
            </td>
            <td valign="top" class="text_area">
              <div class="field_with_errors"><%= f.text_area :body, :size => "45x5" %></div>
            </td>
          </tr>
          <tr>
            <td valign='top'></td>
            <td valign="top"><%= f.submit("发送") %></td>
          </tr>
        </table>
      </div>
  <%  end -%>
</div>



