<ul class="userlist">
  <% @recommend_friends.each do |friend| %>
    <li>
      <div class="userpic">
        <%= link_to user_path(friend) do %>
          <%= image_tag friend.user.avatar_url(:middle), :alt => friend.sns_name %>
        <% end %>
      </div>
      
      <div class="userinfo">
        <div class="username"><%= link_to friend.user.username, user_path(friend.user_id) %></div>
        <p><%= link_to follow_user_path(friend.user), :class => "btn_gray" do %>
              <span>加关注</span>
           <% end %>
         </p>
      </div>
    </li>
  <% end %>
  <div class="clear"></div>
</ul>