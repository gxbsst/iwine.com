<div class="title_btn">
  
  <%= link_to  upload_user_albums_path(current_user, :wine_id => @wine_detail.id ), :class => [:btn_gray, :float_r] do %>
	  <span>添加照片</span>
	<% end %>
	<h2>
		所有照片
		<span class="font12 more">
			<%= link_to "(共#{@wine_detail.photos_count}张...)", wine_photos_path(@wine_detail.id) %>
		</span>
	</h2>
	<div class="clear"></div>
</div>
<ul class="wine_img">
	<% unless @wine_detail.photos.blank? %>
	<% @wine_detail.photos.each do |photo| %>
    <li><%= link_to image_tag(photo.image_url(:thumb_x), :width => 100, :height => 100), wine_photo_path(@wine_detail.id, photo.id) %></li>
  <% end %>
  <% else %>
	 <li>暂时没有图片.</li>
  <% end %>
	<div class="clear"></div>
</ul>
