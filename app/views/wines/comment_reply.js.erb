$("#reply_comment_<%= @comment.id %>").html("<%= escape_javascript(render('wines/share/comment_reply_form', :comment => @comment)) %>");

	
 // 评论表单
$("#reply_comment_<%= @comment.id %> form")
.bind("ajax:success", function(evt, data, status, xhr){
  self = this;
  $(this).parent().slideUp("slow");	
  $(this).parent().parent().children("p.vote").find(".reply_comment_count").text("(" + data + ")") ;
});
