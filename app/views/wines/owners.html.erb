<div id="comment_form"  style="display: none" >

</div>
<div id="add_to_cellar_form"  style="display: none" >

</div>

<div class="wine_profile">
  <%= render_stickies %>
  <div class="left">
    <div class="box title">
          <h2>
               <%= raw @wine_detail.cname %>
               <br />
               <span> <%= raw @wine_detail.ename %></span>
     </h2>
     <!-- title end -->
    </div>
    <div class="clear"></div>

    <div class="box comments">
      <%= render "wines/share/comments" %>
    </div>
    <div class="clear"></div>

  <div class="pagination">
<%= paginate @comments %>

  </div>
    <!-- left end -->
  </div>

  <div  class="right">
    <div class="box resource">
      <%= render "wines/share/resource" %>
    </div>
    <div class="clear"></div>

    <div class="box spec">
      <%= render "wines/share/spec" %>
    </div>
    <div class="clear"></div>

    <div class="box score">
      <%= render "wines/share/score" %>
    </div>
    <div class="clear"></div>

    <div class="box special_comments">
      <%= render "wines/share/special_comments" %>
    </div>
    <div class="clear"></div>

    <div class="box price">
      <%= render "wines/share/price" %>
    </div>
    <div class="clear"></div>

    <div class="box vintage">
      <%= render "wines/share/vintage" %>
    </div>
    <div class="clear"></div>

    <%= link_to_button "feedback", "/" %>
    <!-- right end -->
    </div>


  <!-- wine_profile end -->
 </div>

<div class="clear"></div>


