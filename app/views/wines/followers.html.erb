<div id="comment_form"  style="display: none" ></div>
<div id="add_to_cellar_form"  style="display: none" ></div>
<div class="wine_profile">
  <%= render_stickies %>
  <div class="left">
    <div class="box title relative">
      <h2>
        关注 <%= link_to @wine_detail.name.html_safe, wine_detail_path(@wine_detail) %> 的人
        (<%= @wine_detail.followers_count %> )
      </h2>
      <%= link_to_button "back", wine_detail_path(@wine_detail) %>
      <!-- title end -->
    </div>
    <div class="clear"></div>
    <div class="box followers">
      <%= render "/wines/share/followers_list" %>
    </div>
    <div class="clear"></div>
    <div class="pagination">
      <%#= paginate @comments %>
    </div>
    <!-- left end -->
  </div>
  <div  class="right">
    <div class="box resource">
      <%= render "wines/share/resource" %>
    </div>
    <div class="clear"></div>
    <div class="box spec">
      <%= render "wines/share/spec" %>
    </div>
    <div class="clear"></div>
    <div class="box score">
      <%= render "wines/share/score" %>
    </div>
    <div class="clear"></div>
    <div class="box special_comments">
      <%= render "wines/share/special_comments" %>
    </div>
    <div class="clear"></div>
    <div class="box price">
      <%= render "wines/share/price" %>
    </div>
    <div class="clear"></div>
    <div class="box vintage">
      <%= render "wines/share/vintage" %>
    </div>
    <div class="clear"></div>
    <%= link_to_button "feedback", "/" %>
    <!-- right end -->
  </div>
  <!-- wine_profile end -->
</div>
<div class="clear"></div>


