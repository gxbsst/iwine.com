<ul class="userlist">
  <% if @recommend_friends.present? %>
      <% @recommend_friends.each do |friend| %>
          <li>
            <div class="userpic">
              <%= link_to user_path(friend) do %>
                  <%= image_tag friend.avatar_url(:middle), :alt => '', :height => 50, :width => 50 %>
              <% end %>
            </div>

            <div class="userinfo">
              <div class="username">
                <%= link_to friend.username, user_path(friend) %>
              </div>
              <p><%= link_to follow_user_path(friend), :class => "btn_gray", :method => :put do %>
                    <span>加关注</span>
                <% end %>
              </p>
            </div>
          </li>
      <% end %>
  <% else %>
    暂无好友.
  <% end %>
  <div class="clear"></div>
</ul>
