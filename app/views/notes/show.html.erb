<% content_for :css do %>
  <%= stylesheet_link_tag :notes %>
<% end %>
<%= content_for :js do %>
  <script type="text/javascript">

  var timeout         = 100;
  var closetimer		= 0;
  var ddmenuitem      = 0;

  // open hidden layer
  function mopen(id)
  {
  // cancel close timer
  mcancelclosetime();

  // close old layer
  if(ddmenuitem) ddmenuitem.style.visibility = 'hidden';

  // get new layer and show it
  ddmenuitem = document.getElementById(id);
  ddmenuitem.style.visibility = 'visible';

  }
  // close showed layer
  function mclose()
  {
  if(ddmenuitem) ddmenuitem.style.visibility = 'hidden';
  }

  // go close timer
  function mclosetime()
  {
  closetimer = window.setTimeout(mclose, timeout);
  }

  // cancel close timer
  function mcancelclosetime()
  {
  if(closetimer)
  {
  window.clearTimeout(closetimer);
  closetimer = null;
  }
  }

  // close layer when click-out
  document.onclick = mclose;
  // -->
  </script>

<% end %>
<div class="whitespace notes">
<div class="left">
  <div class="user_space">
    <div class="info2">
      <span class="date"><%= @note.note.created_at.to_s(:cn_short) %></span>
      <span class="form">来自<%=  link_to 'iWineNote', 'http://www.iwine.com/notes/app/' %></span>
    </div>
    <div class="img">
     <%= link_to(image_tag(avatar(@user, :middle), :size => '50x50'), user_path(@user)) %>
    </div>
    <div class="info">
      <span class="name"><%= link_to @user.username, user_path(@user) %></span>
      <span class="location"><%=  @note.location.location %></span>
    </div>
    <div class=""></div>
    <div class="clear"></div>
  </div>
  <div class="notes_img_detail">
    <div class="sharebar">

      <div id="manage">
        <p>
          <a href="#" onmouseover="mopen('mbox')" onmouseout="mclosetime()">
            <%= image_tag('icon/manage_w.png', :size => '21x21', :alt => '管理') %>
          </a>
        </p>
        <div id="mbox" onmouseover="mcancelclosetime()" onmouseout="mclosetime()">
          <%= link_to "编辑品酒辞", app_edit_note_path(@note.id), :class => "icon_edit2" %>
          <%= link_to "删除品酒辞", note_path(@note.id), :method => :delete, :confirm => "确认删除吗？", :class => "icon_cancle" %>
        </div>
      </div>
      <ul>
        <li class="collect">
          <%= link_to image_tag("icon/collect.png", :size => '20x19', :align => :absmiddle) %>
        </li>
        <li class="share">
          <%= link_to image_tag("icon/share.png", :size => '21x17', :align => :absmiddle) %>

        </li>
        <li class="like">
          <%= link_to image_tag("icon/collect.png", :size => '22x20', :align => :absmiddle) %>
        </li>
      </ul>
    </div>
    <%= cover(@note.photo) %>
  </div>
  <div class="notes_winename">
    <div class="star">
      <%= star_rate_tag(@note.wine.rating)%>

    </div>
    <div class="name">
      <h1 class="ch"><%= @note.wine.name_zh %></h1>
      <h1 class="en"><%= @note.wine.name_en %></h1>
    </div>
  </div>
  <div class="section">
    <div class="title">
      <h2>简评</h2></div>
    <div class="content">
      <p>
        <%= @note.wine.comment %>
      </p>
    </div>
  </div>
  <div class="section">
    <div class="title">
      <h2>详细信息</h2></div>
    <div class="content">
      <table class="notes_table" width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th>产区</th>
          <td><%=  @note.wine.region_zh %><br />
            <%=  @note.wine.region_en %></td>
        </tr>
        <tr>
          <th>类型</th>
          <td><%= wine_style(@note.wine.style) %></td>
        </tr>
        <tr>
          <th>葡萄酒品种</th>
          <td><%= varieties(@note.wine.varienty) %> </td>
        </tr>
        <tr>
          <th>酒精度</th>
          <td><%= alcohol(@note.wine.alcohol) %></td>
        </tr>
        <tr>
          <th>价格</th>
          <td> <%= price(@note.wine.price) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="section">
    <div class="title">
      <h2>高级品鉴记录</h2></div>
    <div class="content">
      <table class="notes_table" width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <th><span class="f1">外观</span></th>
          <td>
            <%= @note.appearance.text %>
            <ul class="feature">
              <li>
                <%= show_color(@note.appearance.color_image_name) %>
                <br />
                <%= @note.appearance.color_text %>
              </li>
            </ul>
          </td>
        </tr>
        <tr>
          <th><span class="f2">香气</span></th>
          <td>
            <%= @note.nose.text %>
            <ul class="feature">
              <%= raw nose_aroma(@note.nose.aroma) %>
            </ul>
          </td>
        </tr>
        <tr>
          <th><span class="f3">口感</span></th>
          <td>
            <%= @note.palate.text %>
            <ul class="feature">
              <%= raw nose_aroma(@note.palate.flavor) %>
            </ul>
          </td>
        </tr>
        <tr>
          <th><span class="f4">结论</span></th>
          <td>
            <%= @note.conclusion.text  %><br />
            好适饮期限为：<%= drinkwindow(@note.conclusion.drinkwindow) %></td>
        </tr>
      </table>
    </div>
  </div>
