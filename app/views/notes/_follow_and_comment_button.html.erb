<div class="action clearfix" style="display:none;">
  <% if current_user %>
    <%= link_to comment_note_path(app_note[:note].id, :item_id => item_id), :remote => true, :class => "btn_iw hc ajax" do %>
      <span><em>评论</em></span>
    <% end %>
    <%= link_to follow_note_path(app_note[:note].id, :from_index =>true, :item_id => item_id), :class => "btn_iw hf", :remote => true, :method => :put do %>
      <span><em><%= show_follow_content(app_note[:note].id) %></em></span>
    <% end %>
  <% else %>
    <%= link_to login_path, :class => "btn_iw hc" do %>
      <span><em>评论</em></span>
    <% end %>
    <%= link_to login_path, :class => "btn_iw hf" do %>
      <span><em>收藏</em></span>
    <% end %>
  <% end %>
  <span class="share_sns">
    <a class="btn_iw hs" href="javascript:void(0);"><span><em>分享</em></span></a>
    <div class="dropbox" style="display:none;">
      <div class="com_s sns clearfix">
        <% wine =  app_note[:wine] %>
         <%= render "share/sns_icons",
            :image_url =>  app_note[:photo].sns_share_url,
            :title => note_sns_title,
            :summary => note_sns_summary(wine.show_vintage, 
                                         wine.sName, 
                                         wine.rating, 
                                         wine.comment),
            :url => note_url(app_note[:note].id),
            :float => "normal",
            :no_content => true %>
      </div>
    </div>
  </span>
</div>