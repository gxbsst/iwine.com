<ul class="sidewine">
   <% if @notes.present? %> 
   <% @notes.each_with_index do |note,i| %>
   <% if i < 5 %>
  	<li>
        <%= link_to cover(note[:photo], 'customer', '70x70', '70x70'), note_path(note[:note]) %> 
          <div class="info">
          	<h3 class="zh">
              <%= link_to note[:wine].name_zh, note_path(note[:note]) %>
            </h3>
              <p class="star"><%= star_rate_tag(note[:wine].rating) %></p>
              <p><%= link_to '详细 》', note_path(note[:note]) %></p>
        </div>
    </li> 
    <% end %>
   <% end %>
    <% else %>
        无
    <% end %>
    <div class="clear"></div>
</ul>