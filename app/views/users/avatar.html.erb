<% unless @photos.blank? %>
  <% @photos.each do |photo| %>
  <%= image_tag photo.image_url( :thumb ) %>
  <a src="/users/editAvatar?id="  class="fancybox" >修改</a>
<% end %>
<% else %>
  还没有图片 赶快上传吧
<% end %>

<%= form_for @photo, :url => '/users/avatar', :html => { :multipart => 'true' } do |f| %>
  <%= f.file_field :image%>
  <%= f.submit %>
<% end %>
<script type="text/javascript">
$(document).ready(function() {
  $(".fancybox").fancybox();
});
</script>