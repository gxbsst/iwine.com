<ul class="userlist">
	<% @followers.each_with_index do |user, index| %>
	<li>
		<div class="userpic">
			<%= link_to_user user, 
											 user_path(user, :trailing_slash => true), 
											 {:with_avatar => true, :avatar_version => :middle},
											 {:size => "50x50"} %>
		</div>
		<div class="userinfo">
			<div class="username">
					<%= link_to_user user, user_path(user, :trailing_slash => true) %>
			</div>
			<div class="userlocation"><%= user.city %></div>
		</div>
	</li>
	<% if ((index + 1) % 3) == 0 %>
	<div class="clear"></div>
	<% end %>
	
	<% end %>
	<div class="clear"></div>
</ul>
