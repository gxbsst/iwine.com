<div id="loading" class="loading absolute" style="display: none">
  loading...
</div>
<div class="share float_r pt5">
	<%= render "share/sns_icons",
        :image_url => sns_image_url(@wine_detail, :thumb_name => :large),
        :title => sns_title(@wine_detail),
        :summary => sns_summary(@wine_detail),
        :url => request.url %>
</div>
<div>
	
	<% if @follow_item.present? %>
			<span class="icon_fol mr5">
					已关注
				<span class="cancl_fol">
					 <%= link_to "(取消)", wine_follow_path(@wine_detail, @follow_item), :method => :delete %>
				</span>
		  </span>

	<% else %>
		<%= link_to new_wine_follow_path(@wine_detail), 
					                            :class => [:btn_gray, :mr5, :ajax], 
					                            :remote => true do %>
			<span>关注</span>
		<% end %>
	<% end %>

	
	<%= link_to new_wine_comment_path(@wine_detail, :do => "comment"),  
	                                  :class => [:btn_gray, :mr5, :ajax], 
	                                  :remote => true do %>
		<span>评论</span>
	<% end %>
	<%= link_to new_note_path(:step => "first", :wine_detail_id => @wine_detail.id),
					 :class => "btn_gray mr5" do %>
		<span>写品酒辞</span>
	<% end %>
	<%= link_to  add_to_cellar_wine_path(@wine_detail, 
								:wine_id => @wine_detail.wine_id, 
								:wine_detail_id => @wine_detail.id), 
								:class => [:btn_gray] do %>
		<span>加入酒窖</span>
	<% end %>
</div>
<div class="clear"></div>
