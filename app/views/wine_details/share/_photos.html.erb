<div class="title_btn">
  
  <%= link_to  photo_upload_wine_path(@wine_detail), :class => [:btn_gray, :float_r] do %>
	  <span>添加照片</span>
	<% end %>
	<h2>
		所有照片
		<span class="font12 more">
			<%= link_to "(共#{@wine_detail.all_photo_counts}张...)", wine_photos_path(@wine_detail) %>
		</span>
	</h2>
	<div class="clear"></div>
</div>
<ul class="wine_img">
	<% unless @photos.blank? %>
	<% @photos.each do |photo| %>
    <li><%= link_to image_tag(photo.image_url(:thumb_x)), wine_photo_path(@wine_detail, photo.id) %></li>
  <% end %>
  <% else %>
	 <li>暂时没有图片.</li>
  <% end %>
	<div class="clear"></div>
</ul>
