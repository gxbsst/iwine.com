<%= render "sub_nav", :action => params[:action]  %>
<%= render_stickies %>

<% unless current_user.avatar.blank? %>
<%= image_tag current_user.avatar_url(:large), id: "cropbox" %>

<br />
<br />
<h4>预览</h4>
<div style="width:50px; height:50px; overflow:hidden">
	<%= image_tag current_user.avatar.url(:large), :id => "preview" %>
</div>

<%= form_for current_user, :url => url_for(:action => :avatar), :method => :post  do |f| %>
<% %w[x y w h].each do |attribute| %>
<%= f.hidden_field "crop_#{attribute}" %>
<% end %>
<div class="actions">
	<%= f.submit "保存" %>
</div>
<% end %>

<% else %>
<p> 快来上传你的头像吧! </p>
<% end %>



<%= form_for current_user, :url => url_for(:action => :avatar), :html => { :multipart => 'true' } do |f| %>
<%= f.file_field :avatar %>
<%= f.submit %>
<% end %>

